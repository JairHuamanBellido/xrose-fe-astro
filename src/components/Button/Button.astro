---
import type { SubpartButtonDomain } from "../../lib/shared/components-model/subpartButton/domain/model/SubpartButtonDomain.model";
import RightArrow from "../Icon/RightArrow";

interface Props extends SubpartButtonDomain {}

const { text, variant } = Astro.props;

const buttonTheme = {
  Primary: " px-8 bg-black text-white",
  Secondary: "px-8 bg-transparent border border-black text-black",
  Link: "text-gray-600 hover:text-gray-700 bg-transparent font-semibold px-0",
};
---

<button
  class={`h-12 text-lg relative flex items-center rounded-full cursor-pointer group ${buttonTheme[variant]}`}
>
  {text}

  {
    variant === "Link" && (
      <>
        <div class="ml-2">
          <RightArrow />
        </div>
        <div class="absolute bottom-0 w-0 h-[1px] bg-gray-600 transition-all ease-in-out duration-200 group-hover:w-full " />
      </>
    )
  }
</button>
